<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 centered" id="card_border" data-no-turbolink>
		<%= form_for(@feedback) do |f| %>
			<br>
			<h4><b>The prompt above the image helped guide my Yes/No decision:</b></h4> 

			<div class="col-md-6 col-xs-8 col-md-offset-1 col-xs-offset-1 right-align">
				<%= f.label "1 (strongly disagree)" %>
					<%= radio_button "feedback", "prompt_help", 1 %> <br>
				<%= f.label "2 (disagree)" %>
					<%= radio_button "feedback", "prompt_help", 2 %> <br>
				<%= f.label "3 (neutral)" %>
					<%= radio_button "feedback", "prompt_help", 3 %> <br>
				<%= f.label "4 (agree)" %>
					<%= radio_button "feedback", "prompt_help", 4 %> <br>
				<%= f.label "5 (strongly agree)" %>
					<%= radio_button "feedback", "prompt_help", 5 %> <br><br>
			</div>

			<div class="col-md-12 col-xs-12">
				<h4><b>What is the minimum you would need to earn <u>per swipe</u> to use this app?</b></h4> 

				<%= f.number_field :would_use %> <b>cents</b> <br><br>

				<%= f.submit "Submit", class: "btn btn-success" %>
			</div>
			
		<% end %>

		</div>
	</div>
</div>