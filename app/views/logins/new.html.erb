<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-xs-12 centered well form-group">
			<h3>User Login</h3>

			<%= form_tag '/login' do %>

				<%= label_tag :username %><br>
				<span><%= text_field_tag :username %> </span><br><br>

				<%= label_tag :password %><br>
				<%= password_field_tag :password %> <br><br>

				<%= submit_tag "Login", class: "btn btn-success" %> 

			<% end %>
		</div>
	</div>
</div>