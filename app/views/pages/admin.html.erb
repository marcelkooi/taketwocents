<div class="container">
	<div class="row">
		<h1>Admin Page</h1>

		<div class="col-md-6 well">
			<% @entries.each do |entry| %>
				<h2><%= entry.title %></h2>
				<%= image_tag(entry.picture.link, height: 200) if entry.picture %> <br>
				<p><strong>
				<%= entry.question %> <br>
					Yes: <%= entry.user_responses.where(response: true).size if entry.user_responses %> &nbsp;&nbsp;|&nbsp;&nbsp;
					No: <%= entry.user_responses.where(response: false).size if entry.user_responses %> 
				</strong></p>
			<% end %>
		</div>

		<div class="col-md-5 well pull-right">
			<h3><%= link_to "Show All Pictures", pictures_path %></h3>
			<br>
				<% @stacks.each do |stack| %>
					<%= link_to stack.title, stack_path(stack.id) %>
				<% end %>
		<br><br>
		<%= link_to "New Stack", new_stack_path, class: "btn btn-success" %><br>
		</div>
	</div>
</div>