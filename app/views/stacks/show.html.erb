<div class="container">
<%= render 'shared/errors', obj: @new_card %>
<h1 class="centered"><%= @stack.title %> </h1><hr>
	
		<div id="add_card">
			<div class="well" data-no-turbolink>
				<%= form_for @new_card do |f| %>
					<div class="row">
						<% @entries.each do |entry| %>
							<div class="centered col-md-2">
								<%= f.radio_button(:entry_id, entry.id) %> <br>
								<%= f.label entry.title %><br>
								<%= entry.question %> <br>
								<%= image_tag(entry.picture.link, width: 150) if entry.picture %>
							</div>
						<% end %>
					</div>
					<div class="row centered">
						<%= will_paginate @entries %> <br>
						<strong>Stack Position</strong> <br>
						<%= f.text_field :sequence, value: @nextseq %> <br><br>
						<%= f.hidden_field :stack_id, value: @stack.id %> 
						<%= f.submit class: "btn btn-success" %>
					</div>
				<% end %>
		</div>
	</div>

	<div class="row">
		<p>
			<% @cards.each do |card| %>
			<div class="col-md-4 centered">
				<strong><%= card.sequence %>.
				<%= card.entry.title %></strong> <br>
				<%= card.entry.question %> <br>
				<%= image_tag(card.entry.picture.link, height: 200) if card.entry.picture %> <br><br>
			</div>
			<% end %>
		</p>

	</div>
</div>