<div class="container">
	<div class="row">

	<%= render 'shared/errors', obj: @user %>

		<div class="col-md-4 col-md-offset-4 well centered">
			<h3>New User</h3>
			<%= form_for(@user) do |f| %>
				<div>
					<%= f.label :group %> <br>
					<%= f.select(:group, [['1', 1], ['2', 2], ['3', 3], ['4', 4]], prompt: 'Please select') %> <br><br>
				</div>
				<div>
					<%= label_tag(:stack) %><br>
					<%= select_tag('stack_id', options_from_collection_for_select(@stacks, 'id', 'title'), prompt: 'Please select') %> <br><br>
				</div>
				<div>
					<%= f.label :age %> <br>
					<%= f.number_field :age, class: 'col-md-6 col-md-offset-3' %> <br><br>
				</div>
				<div>
					<%= f.label :gender %> <br>
					<%= f.select(:gender, [['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']], prompt: 'Please select') %> <br><br>
				</div>
				<div>
					<%= f.submit class: "btn btn-success btn-lg" %> 
				</div>
			<% end %>
		</div>
	</div>
</div>