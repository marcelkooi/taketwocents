<div class="container">
	<div class="row">
		<h1>New Entry</h1> <br>

		<%= form_for([@stack, @stack.entries.build], html: { multipart: true }) do |f| %>

			<div class="well">

			  <div class="field">
			    <%= f.label :title %><br>
			    <%= f.text_field :title, placeholder: 'New Title' %><br><br>
			  </div>

			  <div class="field">
			    <%= f.label :question %><br>
			    <%= f.select(:question, Entry.uniq.pluck(:question), prompt: 'Choose existing') %> <br><br>
			    <%= f.text_field :question, placeholder: 'New Question' %><br><br>
			  </div>
			  
			  <div class="field">
			    <h3>Picture</h3><br>
			    <%= f.label :picture_id %><br>
    			<%= collection_select(:entry, :picture_id, Picture.all, :id, :link, {prompt: true}) %><br><br>
			  </div>

			  <%= render 'form' %>


			  <br>
			  <div class="actions">
			    <%= f.submit class: "btn btn-success" %>
			  </div>
			</div>
		<% end %>
	</div>
</div>