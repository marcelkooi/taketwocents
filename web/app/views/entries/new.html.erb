<div class="container">
	<div class="row">
		<h1>New Entry</h1> <br>

		<%= form_for([@stack, @stack.entries.build], html: { multipart: true }) do |f| %>

			<div class="well">

			  <div class="field">
			    <%= f.label :title %><br>
			    <%= f.text_field :title, placeholder: 'New Title' %><br><br>
			  </div>

			  <div class="field">
			    <%= f.label :question %><br>
			    <%= f.select(:question, Entry.uniq.pluck(:question), prompt: 'Choose existing') %> <br><br>
			    <%= f.text_field :question, placeholder: 'New Question' %><br><br>

			  </div>
			  
			  <div class="field">
			    <%= f.label :image %><br>
			    <%= f.select(:image, Entry.uniq.pluck(:image), prompt: 'Choose existing') %> <br><br>
			  </div>

			  <div class="picture">
        <%= f.file_field :image, accept: 'image/jpeg, image/gif, image/png, image/bmp' %><br>
      	</div>

			  <br>
			  <div class="actions">
			    <%= f.submit class: "btn btn-success" %>
			  </div>
			</div>
		<% end %>
	</div>
</div>