<div class="container">
	<div class="row">
		<h3>User Login</h3> <br><br>

		<%= form_tag '/login' do %>

			<%= label_tag :username %>:
			<%= text_field_tag :username %> <br><br>

			<%= label_tag :password %>:
			<%= password_field_tag :password %> <br><br>

			<%= submit_tag "Login", class: "btn btn-success" %> 

		<% end %>
	</div>
</div>