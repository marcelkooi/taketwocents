<br><br>
<%= form_for(@user) do |f| %>
	<div>
		<%= f.label :age %>
		<%= f.number_field :age %> <br><br>
	</div>
		<%= f.label :gender %>
		<%= f.select(:gender, [['Male', 1], ['Female', 2], ['Other', 3]], prompt: 'Please select') %> <br><br>
	<div>
		<%= f.label :ethnicity %>
		<%= f.select(:ethnicity, [['Caucasian', 1], ['African American', 2], ['Etc', 3]], prompt: 'Please select') %> <br><br>
	</div>

	<div>
		<%= f.submit class: "btn btn-success" %> 
	</div>


<% end %>